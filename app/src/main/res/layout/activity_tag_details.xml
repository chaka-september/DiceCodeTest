<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="tagsModel"
            type="com.chakaseptember.dicecodetest.ui.tagdetails.TagDetailsViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.tagdetails.TagDetailsActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tagDetailsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_tag_details"/>

        <ProgressBar
            android:id="@+id/tagDetailsProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>